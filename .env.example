# Polymarket Configuration
POLYMARKET_PRIVATE_KEY=""  # Your MetaMask private key (0x...)
POLYGON_RPC_URL="https://polygon-bor-rpc.publicnode.com"
POLYMARKET_CLOB_URL="https://clob.polymarket.com"
POLYMARKET_WS_URL="wss://ws-subscriptions-clob.polymarket.com/ws/market"

# Binance Configuration (for BTC price feed)
BINANCE_WS_URL="wss://stream.binance.com:9443/ws/btcusdt@ticker"
BINANCE_API_URL="https://api.binance.com"

# Trading Parameters
INITIAL_CAPITAL=100.0       # Starting capital in USDC
MAX_POSITION_SIZE=20.0      # Max $ per position
SPREAD_BPS=50               # Target spread in basis points (50 = 0.5%)
CANCEL_REPLACE_INTERVAL=2   # Seconds between cancel/replace cycles (2s for 15-min markets)
MIN_PROFIT_BPS=10           # Minimum profit target (10 = 0.1%)
MIN_EDGE_BPS=200            # Minimum edge to overcome fees (200 = 2%)
QUOTE_REFRESH_ON_PRICE_CHANGE=0.001  # Requote when price changes by 0.1%

# Safety Limits
MAX_DAILY_LOSS=20.0         # Stop bot if daily loss exceeds this
MAX_DAILY_TRADES=500        # Maximum trades per day
ENABLE_DRY_RUN=true         # Start in dry-run mode (no real trades)

# Logging
LOG_LEVEL=INFO              # DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/polymarket_bot.log
